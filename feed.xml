---
layout: null
description: All of my articles and pens.
---

<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">

    <channel>

        <title>{{ site.title | xml_escape }}</title>
        <description>{{ page.description | xml_escape }}</description>
        <link>{{ site.url }}{{ site.baseurl }}</link>
        <atom:link href="{{ site.url }}{{ site.baseurl }}/feed.xml" rel="self" type="application/rss+xml"/>
        <language>en</language>

        <image>
            <url>{{ site.url }}{{ site.baseurl }}/favicon.png</url>
            <title>{{ site.author }}</title>
            <link>{{ site.url }}{{ site.baseurl }}</link>
        </image>

        {% for post in site.posts %}
            <item>
                <title>{{ post.title }}</title>
                <link>{{ post.url | prepend: site.baseurl | prepend: site.url }}</link>
                <pubDate>{{ post.date | date_to_xmlschema }}</pubDate>
                <category>{{ post.category }}</category>
                {% if post.introduction %}<description>{{ post.introduction }}</description>{% endif %}
            </item>
        {% endfor %}

    </channel>

</rss>
